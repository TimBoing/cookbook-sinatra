<h4>La liste des recettes dans mon cookbook:</h4>

<% recipes = @cookbook.all %>
<ol>
  <% recipes.each_with_index do |recipe, index| %>
  <% recipe.done == "true" ? check = "[X]" : check = "[..]" %>
    <li>
      <%="#{check} #{recipe.name} (#{recipe.prep_time} - #{recipe.difficulty})" %>
      <a href="/dest/<%=index%>">DESTROY!</a>
      </li>

  <% end %>
</ol>

